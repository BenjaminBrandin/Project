<?xml version="1.0"?>
<launch>
  <arg name="use_sim_time" default="true" />
  <arg name="gui" default="true" />
  <arg name="headless" default="false" />

  <!-- Load the start_pos.yaml -->
  <rosparam command="load" file="$(find sml_nexus_tutorials)/yaml_files/start_pos.yaml" />

  <!-- Define the state arguments -->
  <arg name="1_x" default="$(eval find('/1_x'))" />
  <arg name="1_y" default="$(eval find('/1_y'))" />
  <arg name="2_x" default="$(eval find('/2_x'))" />
  <arg name="2_y" default="$(eval find('/2_y'))" />
  <arg name="3_x" default="$(eval find('/3_x'))" />
  <arg name="3_y" default="$(eval find('/3_y'))" />

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="0" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
    <arg name="headless" value="$(arg headless)" />
    <arg name="paused" value="false"/>
  </include>

  <group ns="nexus1">
    <!-- Load robot description -->
    <include file="$(find sml_nexus_description)/launch/sml_nexus_description.launch" />
    <!-- Spawn the robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
      args="-urdf -model nexus1 -param robot_description -x $(arg 1_x) -y $(arg 1_y) -z 0.5" />
      <!-- Controller node -->
    <node name="controller" pkg="sml_nexus_tutorials" type="controller.py" output="screen" >
      <param name="robot_name" value="nexus1"/>
    </node>
  </group>

  <group ns="nexus2">
    <!-- Load robot description -->
    <include file="$(find sml_nexus_description)/launch/sml_nexus_description.launch" />
    <!-- Spawn the robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
      args="-urdf -model nexus2 -param robot_description -x $(arg 2_x) -y $(arg 2_y) -z 0.5" />
      <!-- Controller node -->
    <node name="controller" pkg="sml_nexus_tutorials" type="controller.py" output="screen" >
      <param name="robot_name" value="nexus2"/>
    </node>
  </group>

  <group ns="nexus3">
    <!-- Load robot description -->
    <include file="$(find sml_nexus_description)/launch/sml_nexus_description.launch" />
    <!-- Spawn the robot -->
    <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model"
      args="-urdf -model nexus3 -param robot_description -x $(arg 3_x) -y $(arg 3_y) -z 0.5" />
      <!-- Controller node -->
    <node name="controller" pkg="sml_nexus_tutorials" type="controller.py" output="screen" >
      <param name="robot_name" value="nexus3"/>
    </node>
  </group>

  <!-- Load manager -->
  <node name="manager" pkg="sml_nexus_tutorials" type="manager_node.py" output="screen" />

  <!-- Motion capture system simulation -->
  <include file="$(find mocap_simulator)/launch/qualisys_simulator.launch" />

</launch>